<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Document</title>
  <body>

    <script>
     for(let i = 1;i<=5;i++){
        for(let j = 1;j<=6-i;j++){
          document.write("&nbsp;&nbsp;")
        }
        for(let k = 1;k<=i;k++){
          document.write("*")
        }
        document.write("<br>")
     }
    
    </script>
  </body>
</html>
